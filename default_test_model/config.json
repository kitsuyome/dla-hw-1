{
    "name": "default_config",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {}
        },
        "log_spec": true
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "DeepSpeechModel",
        "args": {
            "n_feats": 128,
            "rnn_layers": 5,
            "rnn_hidden_size": 512
        }
    },
    "data": {
        "train": {
            "batch_size": 50,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "data_dir": "/kaggle/input/librispeech",
                        "index_dir": "/kaggle/working",
                        "part": "train-clean-100",
                        "max_audio_length": 40.0,
                        "max_text_length": 400
                    }
                },
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "data_dir": "/kaggle/input/librispeech",
                        "index_dir": "/kaggle/working",
                        "part": "train-clean-360",
                        "max_audio_length": 40.0,
                        "max_text_length": 400
                    }
                }
            ]
        },
        "val": {
            "batch_size": 30,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "data_dir": "/kaggle/input/librispeech",
                        "index_dir": "/kaggle/working",
                        "part": "dev-clean"
                    }
                }
            ]
        },
        "test-clean": {
            "batch_size": 30,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "data_dir": "/kaggle/input/librispeech",
                        "index_dir": "/kaggle/working",
                        "part": "test-clean"
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 100,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 0.0003,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "asr_project",
        "len_epoch": 100,
        "grad_norm_clip": 10
    }
}